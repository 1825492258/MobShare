<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:text="分享到"
        android:textColor="#606060"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_dialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_item_one"
            style="@style/text_dialog_share"
            android:drawableTop="@drawable/ic_dialog_one"
            android:text="微信" />

        <TextView
            android:id="@+id/dialog_item_two"
            style="@style/text_dialog_share"
            android:drawableTop="@drawable/ic_dialog_two"
            android:text="微信朋友圈" />
        <TextView
            android:id="@+id/dialog_item_three"
            style="@style/text_dialog_share"
            android:drawableTop="@drawable/ic_dialog_three"
            android:text="QQ" />
        <TextView
            android:id="@+id/dialog_item_four"
            style="@style/text_dialog_share"
            android:drawableTop="@drawable/ic_dialog_four"
            android:text="QQ空间" />

    </LinearLayout>
</LinearLayout>